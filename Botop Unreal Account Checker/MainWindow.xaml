        <TextBox x:Name="txt_clientversion" HorizontalAlignment="Left" Height="23" Margin="98,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="156"/>
        <Label x:Name="lbl_prog" Content="0 %" HorizontalAlignment="Left" Margin="5,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.105,0.154"/>
        <ProgressBar x:Name="pbar" HorizontalAlignment="Left" Margin="5,236,0,0" VerticalAlignment="Top" Width="415" Height="22"/>
        <Label x:Name="lbl_threads" Content="0 Threads" HorizontalAlignment="Left" Margin="10,397,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.105,0.154"/>
        <CheckBox  x:Name="chkpw" Content="Try Bypass PWChange [UNSTABLE]" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top"/>
        <Label Content="Timeout Account Check After (Seconds):" HorizontalAlignment="Left" Margin="10,188,0,0" VerticalAlignment="Top"/>
        <xctk:IntegerUpDown x:Name="timeoutupdown" HorizontalAlignment="Left" Margin="237,188,0,0" VerticalAlignment="Top" Width="79" Maximum="100000" Minimum="1" Value="30" Height="26"/>
        <Label x:Name="lbl1" Content="Clicking Pause Will Stop " HorizontalAlignment="Left" Margin="259,58,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl2" Content="Thread Creation However " HorizontalAlignment="Left" Margin="259,84,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl3" Content="Current Threads Must Finish " HorizontalAlignment="Left" Margin="259,110,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_about" Content="About" HorizontalAlignment="Left" Margin="314,405,0,0" VerticalAlignment="Top" Width="114" Height="31"/>
        <Label Content="Bitcoin Donations Are Accepted Here To Keep This Project Alive" HorizontalAlignment="Left" Margin="10,342,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="16,368,0,0" TextWrapping="Wrap" Text="16Xmx6UmPAySLSaMiDtyNYVFtqetKZnhmr" VerticalAlignment="Top" Width="245"/>
        <Button x:Name="btn_about_Copy" Content="Copy" HorizontalAlignment="Left" Margin="264,368,0,0" VerticalAlignment="Top" Width="63" Height="26"/>
        <Label Content="Contact Me At halearn@gmail.com" HorizontalAlignment="Left" Margin="117,415,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_importaccounts_Copy" Content="Import Accounts From Clipboard" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="206" Height="25"/>

    </Grid>
</Controls:MetroWindow>
