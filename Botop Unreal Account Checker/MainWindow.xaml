        <ComboBox x:Name="regionbox" HorizontalAlignment="Left" Margin="68,72,0,0" VerticalAlignment="Top" Width="186"/>
        <Label Content="Region :" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>

        <xctk:IntegerUpDown x:Name="threadupdown" HorizontalAlignment="Left" Margin="68,103,0,0" VerticalAlignment="Top" Width="186" Maximum="100" Minimum="1" Value="10" Height="26"/>
        <Button x:Name="btn_api" Content="Choose Your Own Api Key" HorizontalAlignment="Left" Margin="226,292,0,0" VerticalAlignment="Top" Width="194" Height="36"/>
